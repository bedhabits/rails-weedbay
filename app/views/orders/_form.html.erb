<%= simple_form_for [@order] do |f| %>
  <% if @order.errors.any? %>
    <ul>
      <% @order.errors.full_messages do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="form-inputs">
    <%= f.input :name, placeholder: "Order name" %>
    <%= f.input :email, placeholder: "Your email" %>
    <%= f.input :address, placeholder: "Your address" %>
  </div>
  <div class="form-actions mt-4">
    <%= f.submit "Submit", class: "btn btn-success button-log p-0" %>
  </div>
<% end %>
