<div class="container mt-4">
  <div class="row d-flex justify-content-center">
    <div class="col-sm-6 format-form">
      <h1>Sold Orders</h1>

      <% @orders.each do |order| %>
      <div class="card mb-5">
        <div class="card-body">
          <h5 class="card-title">Order from: <%= order.name %></h5>
          <p class="card-text">Email: <%= order.email %></p>
          <p class="card-text">Address: <%= order.address %> </p>
          <h6><strong>Products</strong></h6>
          <% products = order.products.select {|product| product.user == current_user} %>
          <% products.each do |product| %>
          <p class="card-text"><%= link_to product.name , product_path(product) %>
          <%= product.price %> x <%= order.product_orders.find_by(product_id: product.id).quantity %></p>
          <% end %>
          <hr>
          <p class="card-text"><strong>SubTotal:
            <%= order.sub_total %>
          </strong></p>

        </div>
      </div>
      <% end %>

    </div>
  </div>
</div>

