productToAdd = document.querySelector("[data-product-id='<%= @product_order.product_id %>']");
console.log(productToAdd);
// render cart
productOrderToAdd ="<%= j render 'product_order', product_order: @product_order %>";

// get cart dropdown div
cartTable = document.getElementById('cart-table');

// insert new element at the end
if (productToAdd === null) {
  cartTable.insertAdjacentHTML('beforeend', productOrderToAdd);
} else {
  productToAdd.innerHTML = productOrderToAdd;
}

// get cart qty
cartQty = "<%= @current_cart.total_qty %>";

// get cart count div
cartCount = document.getElementById('cart-count');

//set cart count to cart qty
cartCount.innerHTML = cartQty;

// get cart subtotal
cartSubTotal = "<%= @current_cart.sub_total %>";

// get total div
cartSubTotalDiv = document.querySelector('.total_cell');

// set subtotal to subtotaldiv
cartSubTotalDiv.innerHTML = cartSubTotal;


