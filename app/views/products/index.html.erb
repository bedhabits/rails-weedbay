<div id="cart-dropdown" class="container">
  <div class="row">
    <div class="col-md-4 offset-md-10">
      <%= render @current_cart %>
    </div>
  </div>
</div>
<div class="container mt-4">
  <div class="row">
    <div class="col-sm-6">
      <h1>All Products</h1>

      <%= render 'search' %>
      <ul>
        <% @products.each do |product| %>
          <li>
            <%= link_to product.name, product_path(product) %> <%= product.user.email %> -
            <% if policy(product).edit?  %>
              <%= link_to "Edit", edit_product_path(product) %> -
            <% end %>
            <% if policy(product).destroy? %>
              <%= link_to "Destroy", product_path(product), method: :delete, data: {confirm: 'Are you sure'} %>
            <% end %>
            <%= button_to "Add to cart", product_orders_path(product_id: product.id), class: "add-to-cart", remote: true %>
          </li>
        <% end %>
      </ul>


      <% if policy(Product).new? %>
        <%= link_to "add new product", new_product_path  %>
      <% end %>
        <%= link_to "show orders", orders_path  %>
    </div>
  </div>
</div>


