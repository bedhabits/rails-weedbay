<div class="background">
  <div class="bob-banner d-flex justify-content-center">

    <div class="card" style="border: none;" id="search-card-id">
      <div class="card-body search-card">
        <div class="card-title">
          <h1>Search live flavors. Order cannabis online.</h1>
        </div>

        <div class="simple-form">
          <%= render 'search' %>
        </div>
      </div>
    </div>
  </div>

  <br/>

  <div class="outer top-product">
    <div class="inner">
      <h2 style="color: rgba(238, 195, 25, 1);">Top products</h2>
    </div>
    <div class="inner">
      <%= image_tag "separation-line.png", alt: "Line", class: "separation-line" %>
    </div>
  </div>


  <div class="container">
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-sm-4 mt-4">
          <div class="card product-card">

            <%= image_tag product.photo_url, class: "card-img-top", style: "border-radius: 3px;" %>

            <div class="card-body" style="padding: 1vh;">

                  <%= link_to product.name, product_path(product), class: "card-title product-name" %>
                  <p class="card-text mt-2"><%= product.user.email %></p>

              <div class="container">
                <div class="row d-flex justify-content-between">
                  <p class="card-text btn-admin-edit-destroy">
                    <% if policy(product).edit?  %>
                      <%= link_to edit_product_path(product) do %>
                        <i class="fas fa-edit fa"></i>
                      <% end %>
                    <% end %>
                    <% if policy(product).destroy? %>
                      <%= link_to product_path(product), method: :delete, data: {confirm: 'Are you sure'} do %>
                        <i class="fas fa-trash fa"></i>
                      <% end %>
                    <% end %>
                  </p>

                  <%= button_to "Add to cart", product_orders_path(product_id: product.id), class: "btn btn-secondary add-to-cart", remote: true %>
                </div>
              </div>
            </div>

          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


