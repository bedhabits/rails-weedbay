<div class="navbar navbar-expand-sm navbar-light navbar-weedbay fixed-top">
  <div class="d-flex flex-row">
    <div class="d-flex align-items-strech ml-4">

      <div class="p-2">
        <% if user_signed_in? %>
          <li class="nav-item active d-flex align-items-stretch mt-2 p-1">
            <div class="dropdown show">

              <div id="menu-bar-open" class="dropdownMenuLink">
                <%= image_tag "menu-img.png", alt: "Menu image" %>
              </div>

            </div>
          </li>

          <div class="p-2 navbar-brand">
            <%= link_to "/" do %>
              <%= image_tag "https://i1.wp.com/medicannabis.com.au/wp-content/uploads/2019/06/MediCannabis_Isotype_RGB-01-800x800.png?ssl=1", style: "height: 60px; width: 60px;" %>
            <% end %>
          </div>
      </div>
    </div>
  </div>

  <div class="d-flex flex-row-reverse">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <div class="d-flex mr-4">
          <div class="p-2 d-flex justify-content-between align-items-">
            <div class="container">
              <div class="row">
                <div class="col mt-2">

                  <%= link_to "", class: "cart" do %>
                    <i class="fas fa-shopping-cart fa-2x"></i>
                  <% end %>

                  <span class="badge badge-light" id="cart-count">
                    <%= @current_cart.total_qty %>
                  </span>
                </div>
              </div>
          </div>

          <div class="p-2 mr-2 ml-3">
            <li class="nav-item dropdown">
              <% if current_user.photo.attached? %>
                <%= cl_image_tag current_user.photo.key, width: 150, height: 150, crop: :thumb, gravity: :face, class: "img-avatar" %>
              <% end %>
            </li>
          </div>

          <div id="cart-dropdown" class="container mt-2">
            <%= render 'carts/cart', cart: @current_cart %>
          </div>

          <div class="p-2 d-flex justify-content-center">
          <% else %>
            <div class="render-links-button nav-item d-flex justify-content-center mt-2" style="border-color: rgba(238, 195, 25, 1);">
              <%= link_to "Login", new_user_session_path, class: "nav-link" %>
            </div>

            <div class="p-2 navbar-brand">
              <%= link_to "/" do %>
                <%= image_tag "https://i1.wp.com/medicannabis.com.au/wp-content/uploads/2019/06/MediCannabis_Isotype_RGB-01-800x800.png?ssl=1" %>
              <% end %>
            </div>
          <% end %>
          </div>

        </div>
      </ul>
    </div>
  </div>
</div>
